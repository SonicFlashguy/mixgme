/* Hidden scrollbars by default, visible on hover/scroll */
.scrollbar-hidden {
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE/Edge */
}

.scrollbar-hidden::-webkit-scrollbar {
  display: none; /* Chrome, Safari, Opera */
}

.scrollbar-auto {
  scrollbar-width: thin; /* Firefox */
  scrollbar-color: rgba(255, 255, 255, 0.3) transparent; /* Firefox */
}

.scrollbar-auto::-webkit-scrollbar {
  width: 6px; /* Chrome, Safari, Opera */
  height: 6px;
}

.scrollbar-auto::-webkit-scrollbar-track {
  background: transparent;
}

.scrollbar-auto::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.3);
  border-radius: 3px;
}

.scrollbar-auto::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.5);
}

/* Minimal scrollbar - only the draggable bar, everything else transparent */
.scrollbar-minimal {
  scrollbar-width: none; /* Firefox - hidden by default */
  -ms-overflow-style: none; /* IE/Edge */
}

.scrollbar-minimal::-webkit-scrollbar {
  width: 0px; /* Chrome, Safari, Opera - hidden by default */
  height: 0px;
  background: transparent; /* Completely transparent background */
}

.scrollbar-minimal.scrolling {
  scrollbar-width: thin; /* Firefox - show thin scrollbar when scrolling */
  scrollbar-color: rgba(255, 255, 255, 0.5) transparent; /* Firefox: thumb color, track transparent */
}

.scrollbar-minimal.scrolling::-webkit-scrollbar {
  width: 1px; /* Chrome, Safari, Opera - minimum visible width */
  height: 1px;
  background: transparent; /* Completely transparent background */
}

/* Remove all scrollbar components except the thumb */
.scrollbar-minimal::-webkit-scrollbar-track {
  background: transparent; /* Completely transparent track */
  border: none;
  margin: 0;
  padding: 0;
}

.scrollbar-minimal::-webkit-scrollbar-track-piece {
  background: transparent; /* Transparent track pieces */
}

.scrollbar-minimal::-webkit-scrollbar-corner {
  background: transparent; /* Transparent corner */
}

.scrollbar-minimal::-webkit-scrollbar-button {
  display: none; /* Remove arrows completely */
  width: 0;
  height: 0;
}

/* Only the draggable thumb is visible - much shorter */
.scrollbar-minimal::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.6);
  border-radius: 0.5px;
  border: none;
  box-shadow: none;
  /* Reduce thumb length by 90% using larger borders as spacers */
  border-top: 30px solid transparent;
  border-bottom: 30px solid transparent;
  border-left: 0;
  border-right: 0;
  background-clip: content-box;
}

.scrollbar-minimal::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.7);
  border-top: 30px solid transparent;
  border-bottom: 30px solid transparent;
  background-clip: content-box;
}

.scrollbar-minimal::-webkit-scrollbar-thumb:active {
  background: rgba(255, 255, 255, 0.8);
  border-top: 30px solid transparent;
  border-bottom: 30px solid transparent;
  background-clip: content-box;
}

